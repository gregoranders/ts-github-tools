{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["prettier", "@typescript-eslint"],
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended", "prettier/@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "rules": {
    "no-warning-comments": [
      2,
      {
        "terms": ["todo", "fixme"],
        "location": "anywhere"
      }
    ]
  },
  "settings": {}
}
