{
  "name": "ts-github-tools",
  "version": "0.0.1",
  "description": "TypeScript GitHub Tools",
  "author": "Gregor Anders <gregor.anders@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregoranders/ts-github-tools/issues"
  },
  "homepage": "https://gregoranders.github.io/ts-github-tools/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregoranders/ts-github-tools.git"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "private": false,
  "keywords": [
    "api-documenter",
    "api-extractor",
    "ci",
    "jest",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "docs",
    "CHANGELOG.md",
    "SECURITY.md"
  ],
  "scripts": {
    "clear": "rimraf ./dist/* ./temp/* ./node_modules ./package-lock.json",
    "start": "node ./dist/index.js",
    "prebuild": "eslint",
    "build": "cross-env NODE_ENV=production tsc --project ./",
    "lint": "eslint --ext .ts ./src",
    "test": "jest",
    "watch": "tsc --watch --project ./",
    "prepare": "npm test && npm run build",
    "api-extractor": "api-extractor run --local --verbose",
    "api-documenter": "api-documenter markdown --input ./docs --output ./docs-tmp && cpx 'docs-tmp/**/*.*' docs && rimraf ./docs-tmp",
    "codeclimate": "docker run --interactive --tty --rm --env CODECLIMATE_CODE=\"$PWD\" --volume \"$PWD\":/code --volume /var/run/docker.sock:/var/run/docker.sock --volume /tmp/cc:/tmp/cc codeclimate/codeclimate analyze",
    "changelog": "changelog"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run prepare",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext .ts"
    ]
  },
  "jest-html-reporter": {
    "pageTitle": "ts-github-tools",
    "outputPath": "<rootDir>/temp/index.html"
  },
  "jest-junit": {
    "outputDirectory": "<rootDir>/temp"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/temp/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/fixtures/**",
      "!<rootDir>/node_modules/**",
      "!<rootDir>/dist/**",
      "!<rootDir>/temp/**"
    ],
    "coverageReporters": [
      "lcovonly",
      "html",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "reporters": [
      "jest-html-reporter",
      "jest-spec-reporter",
      "jest-junit"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {}
    },
    "rules": {
      "no-warning-comments": [
        2,
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ]
    },
    "settings": {}
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/github": "4.0.0",
    "@octokit/core": "3.1.0",
    "@octokit/rest": "18.0.0"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "7.8.21",
    "@microsoft/api-extractor": "7.9.1",
    "@octokit/types": "5.0.1",
    "@types/fancy-log": "1.3.1",
    "@types/jest": "26.0.4",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "cpx": "1.5.0",
    "cross-env": "7.0.2",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "fancy-log": "1.3.3",
    "generate-changelog": "1.8.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "jest-cli": "26.1.0",
    "jest-html-reporter": "3.1.3",
    "jest-junit": "11.0.1",
    "jest-spec-reporter": "1.0.14",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.1.1",
    "ts-node": "8.10.2",
    "tsdef": "0.0.13",
    "tweetnacl": "1.0.3",
    "tweetsodium": "0.0.5",
    "typescript": "3.9.6"
  }
}
