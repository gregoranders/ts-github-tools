{
  "name": "ts-github-tools",
  "version": "0.0.1",
  "description": "TypeScript GitHub Tools",
  "author": "Gregor Anders <gregor.anders@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregoranders/ts-github-tools/issues"
  },
  "homepage": "https://gregoranders.github.io/ts-github-tools/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregoranders/ts-github-tools.git"
  },
  "engines": {
    "node": ">=16.0"
  },
  "private": false,
  "keywords": [
    "api-documenter",
    "api-extractor",
    "ci",
    "github",
    "jest",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "docs",
    "CHANGELOG.md",
    "SECURITY.md"
  ],
  "scripts": {
    "clear": "rimraf ./dist/* ./temp/* ./test/* ./node_modules ./package-lock.json ./docs-tmp/* ./etc/*",
    "start": "ts-node ./src/index.ts",
    "prebuild": "eslint ./src/**/*.ts --quiet --fix",
    "build": "cross-env NODE_ENV=production tsc --project ./",
    "postbuild": "npm run docs",
    "pretest": "rimraf ./test/*",
    "test": "jest",
    "watch": "tsc --watch --project ./",
    "prepare": "husky install",
    "docs": "npm run api-extractor && npm run api-documenter",
    "api-extractor": "api-extractor run --local --verbose",
    "api-documenter": "api-documenter markdown --input ./dist --output ./docs-tmp && cpx 'docs-tmp/**/*.*' docs",
    "codeclimate": "docker run --interactive --rm --env CODECLIMATE_CODE=\"$PWD\" --volume \"$PWD\":/code --volume /var/run/docker.sock:/var/run/docker.sock --volume /tmp/cc:/tmp/cc codeclimate/codeclimate analyze",
    "codacy": "docker run --interactive --rm --env CODACY_CODE=\"$PWD\" --volume \"$PWD\":\"$PWD\" --volume /var/run/docker.sock:/var/run/docker.sock --volume /tmp:/tmp codacy/codacy-analysis-cli analyze --directory \"$PWD\"",
    "changelog": "changelog"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext .ts"
    ]
  },
  "jest-html-reporter": {
    "pageTitle": "ts-github-tools",
    "outputPath": "<rootDir>/test/index.html"
  },
  "jest-junit": {
    "outputDirectory": "<rootDir>/test"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/test/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/node_modules/**",
      "!<rootDir>/dist/**",
      "!<rootDir>/temp/**",
      "!<rootDir>/test/**"
    ],
    "coverageReporters": [
      "lcovonly",
      "html",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "reporters": [
      "jest-html-reporter",
      "jest-spec-reporter",
      "jest-junit"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "@octokit/core": "4.1.0",
    "@octokit/rest": "19.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.6.3",
    "@microsoft/api-documenter": "7.19.27",
    "@microsoft/api-extractor": "7.33.7",
    "@octokit/types": "8.0.0",
    "@types/fancy-log": "2.0.0",
    "@types/jest": "29.2.5",
    "@types/libsodium-wrappers": "0.7.10",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.47.1",
    "cpx": "1.5.0",
    "cross-env": "7.0.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unicorn": "45.0.2",
    "fancy-log": "2.0.0",
    "generate-changelog": "1.8.0",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "jest-cli": "29.3.1",
    "jest-html-reporter": "3.10.0",
    "jest-junit": "15.0.0",
    "jest-spec-reporter": "1.0.19",
    "libsodium-wrappers": "0.7.11",
    "lint-staged": "13.1.0",
    "prettier": "2.8.7",
    "rimraf": "5.0.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsdef": "0.0.14",
    "typescript": "4.9.4"
  }
}
